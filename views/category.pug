extends layout

block head
    title Vexillopedia | The flag encyclopedia
    link(rel="stylesheet", href="/css/category.css")

block body
    header.header
        span.menu-icon
            a.random-flag(href="/random")
                img(src="/img/icon/random.png" alt="Random Flag")
                
        h1.title 
            a(href="/") Vexillopedia | The flag encyclopedia
    
    main.main
        h2.category-title #{name}
        
        ul.card-list
            each flag in flags
                li.card
                    a(href="/flag/" + flag) 
                        img(src="/img/flag/" + dashify(flag) + ".svg" alt= flag)
                        span #{flag}