        link(rel="manifest" href="manifest.json")
        link(rel="icon" type="image/png" href="/img/favicon.png")

        link(rel="stylesheet" href="/css/global.css")

        block head

    body
        header.header
            span.menu-icon
                a.random-flag(href="/random")
                    img(src="/img/icon/random.png" alt="Random Flag")
                a.contribute(href="/contribute" target="_blank")
                    img(src="/img/icon/contribute.png" alt="Contribute")

            h1.title
                a(href="/") Vexillopedia | The flag encyclopedia

        block body

        script.
            if ("serviceWorker" in navigator) {
                navigator.serviceWorker.register("/service-worker.js", {
                    scope: "/"
                }).then((reg) => console.log(`Registration succeeded.`))
